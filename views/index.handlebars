<div class='container'>
    
    {{!-- title and burger img --}}
    <div class='row'>
        <img class='content-center' src='../public/assets/img/burger.png'>
    </div>

    <div class='row'>
        <h1>Eat a Burger!</h1>
    </div>

    {{!-- Eat the burger button --}}
    <div class='row'>
        <ul class='col-md-6'>
            {{#each burgers}}
                {{#unless devoured}}
                    <p>
                        {{name}}
                    </p>
                    <button class="change-eaten" data-id="{{id}}">
                        Consume the burger.
                    </button>

            <button class="delete-cat" data-id="{{this.id}}">DELETE!</button>}}
        </ul>
        <ul class='col-md-6'>
            {{#each burgers}}
                {{#if devoured}}
                    <p>
                        {{name}}
                    </p>
        </ul>
    </div>

    {{!-- Submit new burger form --}}
    <div class='row'>
        <form class="create-form">

            <div class="form-group">
                <label for="burg">Burger Name:</label>
                <input type="text" id="burg" name="name">
            </div>

            <button type="submit">Add Burger</button>
    
        </form>

        <p>Enter a burger you want to ear and click the "Add Burger" button.</p>
    </div>
</div>